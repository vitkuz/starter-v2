extends ../../../views/root

block globalNav
  //include ../../../views/partials/globalNav

block content
  .container
    .row
      .col-md-12
        h1.text-center= __('user.register.form.title', lang)
        p.text-center= __('user.register.form.subtitle', lang)
    .row.justify-content-md-center.align-items-center
      .col-md-6
        form.form-register(method='post', action='/user/register')
          .form-group
            label.sr-only(for='inputUsername')= __('user.register.form.input.username.label', lang)
            input#inputUsername.form-control(type='text', name='username', placeholder=__('user.register.form.input.username.placeholder', lang), required=true, autofocus=true)
            small(id='usernameHelp', class=['form-text text-muted'])= __('user.register.form.input.username.tip', lang)
          .form-group
            label.sr-only(for='inputEmail')= __('user.register.form.input.email.label', lang)
            input#inputEmail.form-control(type='email', name='email', placeholder=__('user.register.form.input.email.placeholder', lang), required=true)
            small(id='emailHelp', class=['form-text text-muted'])= __('user.register.form.input.email.tip', lang)
          .form-group
            label.sr-only(for='inputPassword')= __('user.register.form.input.password.label', lang)
            input#inputPassword.form-control(type='password', name='password', placeholder=__('user.register.form.input.password.label', lang), required=true)
            small(id='passwordHelp', class=['form-text text-muted'])= __('user.register.form.input.password.tip', lang)
          .form-group
            label.sr-only(for='inputPassword2')= __('user.register.form.input.password2.label', lang)
            input#inputPassword2.form-control(type='password', name='password2', placeholder=__('user.register.form.input.password2.label', lang), required=true)
            small(id='password2Help', class=['form-text text-muted'])= __('user.register.form.input.password2.tip', lang)
          .form-group
            button.btn.btn-lg.btn-primary.btn-block(type='submit')= __('user.register.form.submit.text', lang)
    .row
      .col-md-12
        p.mt-5.mb-3.text-muted.text-center Войти / Регистрация / Вспомнить пароль
    .row
      .col-md-12
        p.mt-5.mb-3.text-muted.text-center © 2017-#{currentYear}

