extends ../../../views/root

block globalNav
  include ../../../views/partials/globalNav

block content
  h1 User register page
  form.form-signin(method='post', action='/user/register')
    h1.h3.mb-3.font-weight-normal Please register
    label.sr-only(for='inputUsername') Email address
    input#inputUsername.form-control(type='text', name='username', placeholder='Username', required=true, autofocus='')
    label.sr-only(for='inputEmail') Email address
    input#inputEmail.form-control(type='email', name='email', placeholder='Email address', required=true, autofocus='')
    label.sr-only(for='inputPassword') Password
    input#inputPassword.form-control(type='password', name='password', placeholder='Password', required=true)
    label.sr-only(for='inputPassword2') Password
    input#inputPassword2.form-control(type='password', name='password2', placeholder='Password confirmation', required=true)
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Register in
